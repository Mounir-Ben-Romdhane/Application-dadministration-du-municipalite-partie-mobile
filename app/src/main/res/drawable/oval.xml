<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item android:right="8dp" android:top="0dp">
                <shape>
                    <corners android:radius="20dp" />
                    <gradient
                        android:angle="45"
                        android:startColor="@color/colorProjet"
                        android:endColor="@color/colorProjet"
                        android:type="linear"
                        />
                </shape>
            </item>
            <item android:bottom="5dp" android:left="6dp" android:right="10dp" android:top="5dp">
                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >
                    <corners
                        android:radius="50dp"
                        />
                    <gradient
                        android:angle="90"
                        android:centerX="50%"

                        android:startColor="@color/colorProjet"
                        android:endColor="@color/colorProjet"
                        android:type="linear"
                        />

                    <size
                        android:width="270dp"
                        android:height="60dp"
                        />
                    <stroke
                        android:width="2.5dp"
                        android:color="@color/colorProjet"
                        />
                </shape>
            </item>
        </layer-list>
    </item>

</selector>