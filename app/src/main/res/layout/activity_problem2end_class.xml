<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawable_layout_prob2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Problem2endClass">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view_prob2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/white"
        android:theme="@style/navigationTheme"
        app:headerLayout="@layout/header_menu"
        app:menu="@menu/main_menu"
        app:itemIconSize="30sp"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/content_prob2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/layoutIcon_prob"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:layout_alignParentEnd="true"
                    android:id="@+id/menu_icon_prob2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:tint="@color/colorProjet"
                    android:src="@drawable/menu_icon" />

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="5sp"
                    android:backgroundTint="@color/colorProjet"
                    android:background="@drawable/shape_shadow">

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الدائرة البلدية بحي الحبيب"
                            android:textColor="@color/black"
                            android:layout_marginTop="20sp"
                            android:layout_marginStart="25sp"
                            />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="25dp"
                            android:text="مشترك 999+"
                            android:background="@drawable/shape_rec03"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20sp"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/searchBtn"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:src="@drawable/splash"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5sp"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/shape_rec03"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp">

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20sp"
                        android:layout_marginEnd="30sp"
                        android:fontFamily="sans-serif-light"
                        android:padding="15dp"
                        android:text="التبليغ عن مشكل"
                        android:textColor="@color/black"
                        android:textSize="30sp" />

                    <TextView
                        android:id="@+id/signup_slide_text"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle_black_border"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="2/3"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="30sp" />

                </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:padding="10sp"
                    android:text="مكان المشكل"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/champ1_prob2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:hint="الحي، النهج، الشارع..."
                    android:minHeight="48dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:padding="10sp"
                    android:text="إشرح المشكل بإيجاز"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/champ2_prob2"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:hint="إشرح المشكل بإيجاز" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:padding="10sp"
                    android:text="قدم حلول للمشكل ( إختياري )"
                    android:textColor="@color/black"
                    android:textSize="20sp" />

                <EditText
                    android:id="@+id/champ3_prob2"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    android:hint="قدم حلول للمشكل ( إختياري )" />


            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/back_btn_avisQues2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:drawableLeft="@drawable/back_arr"
                android:text="رجوع"
                android:textColor="@color/colorProjet"
                android:drawableTint="@color/colorProjet"
                app:cornerRadius="20sp"
                android:layout_marginLeft="80dp"
                android:onClick="callPreviosProblem1"/>

            <Button
                android:id="@+id/next_2end_btn_prob"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorProjet"
                android:drawableEnd="@drawable/next"
                android:text="التالي"
                android:textColor="@color/white"
                android:drawableTint="@color/white"
                app:cornerRadius="20sp"
                android:layout_marginLeft="40dp"
                />

        </LinearLayout>

        </LinearLayout>

    </ScrollView>


</androidx.drawerlayout.widget.DrawerLayout>