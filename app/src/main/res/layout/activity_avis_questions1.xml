<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawable_layout_avisQues1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AvisQuestionsActivity1">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view_avisQues1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/white"
        android:theme="@style/navigationTheme"
        app:headerLayout="@layout/header_menu"
        app:menu="@menu/main_menu"
        app:itemIconSize="30sp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content_avisQues1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/layoutIcon_avisQues1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/menu_icon_avisQues1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/menu_icon"
                    android:layout_alignParentEnd="true"
                    app:tint="@color/colorProjet"
                    />

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="100dp"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/shape_shadow"
                    android:backgroundTint="@color/colorProjet"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="80dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="25sp"
                            android:layout_marginTop="20sp"
                            android:text="الدائرة البلدية بحي الحبيب"
                            android:textColor="@color/black" />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="25dp"
                            android:layout_gravity="center"
                            android:layout_marginStart="20sp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/shape_rec03"
                            android:gravity="center"
                            android:text="مشترك 999+" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/searchBtn"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5sp"
                        android:src="@drawable/splash"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


                </LinearLayout>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:background="@drawable/shape_rec03"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="20sp"
                        android:layout_marginEnd="30sp"
                        android:fontFamily="sans-serif-light"
                        android:padding="15dp"
                        android:text="إخيار نوعية المشاركة"
                        android:textColor="@color/black"
                        android:textSize="25sp" />

                    <TextView
                        android:id="@+id/signup_slide_text"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/circle_black_border"
                        android:fontFamily="monospace"
                        android:gravity="center"
                        android:padding="10dp"
                        android:text="1/2"
                        android:textAlignment="center"
                        android:textColor="@color/black"
                        android:textSize="30sp" />

                </RelativeLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/rgavis"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                    <RadioButton
                        android:id="@+id/rbavis1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="سؤال"
                        android:textSize="20dp"
                        android:layout_marginRight="30dp"/>


                    <RadioButton
                        android:id="@+id/rbavis2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ملاحضة"
                        android:textSize="20dp"
                        android:layout_marginRight="30dp"
                        />


                    <RadioButton
                        android:id="@+id/rbavis3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="مقترح"
                        android:textSize="20dp"
                        android:layout_marginRight="30dp"
                         />
                    </RadioGroup>

                </LinearLayout>


                <TextView
                    android:id="@+id/tc_parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:padding="20sp"
                    android:text="الطرف المعني"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <Spinner
                    android:id="@+id/sp_parent_avisQues1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="15dp"
                    tools:ignore="SpeakableTextPresentCheck" />


            </LinearLayout>

            <Button
                android:id="@+id/next_btn_avisQues1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/colorProjet"
                android:drawableEnd="@drawable/next"
                android:text="التالي"
                android:textColor="@color/white"
                android:drawableTint="@color/white"
                app:cornerRadius="20sp" />

        </LinearLayout>


    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>