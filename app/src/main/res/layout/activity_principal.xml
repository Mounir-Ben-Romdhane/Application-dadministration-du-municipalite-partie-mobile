<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrincipalActivity"
    android:id="@+id/drawable_layout_principal">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view_principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="end"
        app:headerLayout="@layout/header_menu"
        android:theme="@style/navigationTheme"
        app:menu="@menu/main_menu"
        app:itemIconSize="30sp"
        />


    <LinearLayout
        android:id="@+id/contentt_principal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/layoutIcon_principal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        >

        <ImageView
            android:id="@+id/menu_icon_principal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/menu_icon"
            app:tint="@color/colorProjet" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:orientation="horizontal"
            android:layout_marginStart="70dp"
            android:layout_marginTop="5sp"
            android:backgroundTint="@color/colorProjet"
            android:background="@drawable/shape_shadow">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="80dp"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الدائرة البلدية بحي الحبيب"
                    android:textColor="@color/black"
                    android:layout_marginTop="20sp"
                    android:layout_marginStart="25sp"
                    />

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="25dp"
                    android:text="مشترك 999+"
                    android:background="@drawable/shape_rec03"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="20sp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/searchBtn"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:src="@drawable/splash"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5sp"
                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


        </LinearLayout>


        <ImageView
            android:id="@+id/profil_icon_principal"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_profil"
            app:tint="@color/colorProjet"
            />


    </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="228dp"
            android:src="@drawable/haylahbibimage"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/time"
                app:tint="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="{ من الاثنين إلى الخميس } \n الجلسة 1: 8:30  ->  12:30ً \n الجلسة 2: 2:00 ً -> 6:00  \n { الجمعة } \n الجلسة 1: 8:30 صباحًا - > 2:00 بعد الظهر"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginEnd="40sp"
                android:textStyle="bold"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/phone"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="40sp"
                android:text="39 155 650"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/person"
                android:layout_alignParentEnd="true"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="40sp"
                android:text="39 155 111"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mail"
                android:layout_alignParentEnd="true"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="40sp"
                android:text="municipalitecityelhabib@gmail.com"
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold"/>

        </RelativeLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>