<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SondageExist"
    android:id="@+id/drawable_layout_sondageExist">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view_sondageExist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/white"
        android:theme="@style/navigationTheme"
        app:headerLayout="@layout/header_menu"
        app:menu="@menu/main_menu"
        app:itemIconSize="30sp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content_sondageExist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="vertical">


            <RelativeLayout
                android:id="@+id/layoutIcon_sondageExist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/menu_icon_sondageExist"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/menu_icon"
                    app:tint="@color/colorProjet"
                    android:layout_alignParentEnd="true"/>

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="5sp"
                    android:backgroundTint="@color/colorProjet"
                    android:background="@drawable/shape_shadow">

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الدائرة البلدية بحي الحبيب"
                            android:textColor="@color/black"
                            android:layout_marginTop="20sp"
                            android:layout_marginStart="25sp"
                            />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="25dp"
                            android:text="مشترك 999+"
                            android:background="@drawable/shape_rec03"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20sp"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/searchBtn"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:src="@drawable/splash"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5sp"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="340dp"
                android:layout_margin="15dp"
                android:background="@drawable/shape_rec03"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الرجاء مشاركتنا رأيك"
                    android:textSize="30sp"
                    android:textColor="@color/black"
                    android:layout_gravity="end"
                    android:layout_marginEnd="15sp"
                    android:layout_marginTop="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="العنوان"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/black"/>


                <TextView
                    android:id="@+id/titleSondage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/black"/>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    >

                    <RadioGroup
                        android:id="@+id/rgSondage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        >

                        <RadioButton
                            android:id="@+id/rbSondage1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""/>


                        <RadioButton
                            android:id="@+id/rbSondage2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />


                        <RadioButton
                            android:id="@+id/rbSondage3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            />
                    </RadioGroup>

                    <TextView
                        android:id="@+id/sondagechoix1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="50dp"
                        android:minWidth="48dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/sondagechoix2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="50dp"
                        android:layout_marginEnd="50dp"
                        android:minWidth="48dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:ignore="SpeakableTextPresentCheck" />

                    <TextView
                        android:id="@+id/sondagechoix3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="100dp"
                        android:layout_marginEnd="50dp"
                        android:minWidth="48dp"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        tools:ignore="SpeakableTextPresentCheck" />


                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الوقت المحدد للتصويت"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginTop="10sp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/timeSondage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="5sp"
                    android:gravity="center"
                    />

            </LinearLayout>

            <Button
                android:id="@+id/btnSondageExist"
                android:layout_width="130dp"
                android:layout_height="48dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorProjet"
                android:text="صوت الآن"
                android:textColor="@color/white"
                app:cornerRadius="20sp"
                />



        </LinearLayout>


    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>