<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuideActivity"
    android:id="@+id/drawable_layout_guide">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view_guide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/white"
        android:theme="@style/navigationTheme"
        app:headerLayout="@layout/header_menu"
        app:menu="@menu/main_menu"
        app:itemIconSize="30sp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/content_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFF"
            android:orientation="vertical"
            >


            <RelativeLayout
                android:id="@+id/layoutIcon_guide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/menu_icon_guide"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/menu_icon"
                    app:tint="@color/colorProjet" />

                <LinearLayout
                    android:layout_width="250dp"
                    android:layout_height="90dp"
                    android:orientation="horizontal"
                    android:layout_marginStart="60dp"
                    android:layout_marginTop="5sp"
                    android:background="@drawable/shape_shadow"
                    android:backgroundTint="@color/colorProjet"
                    >

                    <LinearLayout
                        android:layout_width="160dp"
                        android:layout_height="80dp"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="الدائرة البلدية بحي الحبيب"
                            android:textColor="@color/black"
                            android:layout_marginTop="20sp"
                            android:layout_marginStart="25sp"
                            />

                        <TextView
                            android:layout_width="90dp"
                            android:layout_height="25dp"
                            android:text="مشترك 999+"
                            android:background="@drawable/shape_rec03"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginStart="20sp"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/searchBtn"
                        android:layout_width="70dp"
                        android:layout_height="50dp"
                        android:src="@drawable/splash"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5sp"
                        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


                </LinearLayout>


            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_shadow"
                android:backgroundTint="@color/colorProjet"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/shape_rec04"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="خدمات إدارية"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="التعريف بالإمضاء"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_shadow"
                android:backgroundTint="@color/colorProjet"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/shape_rec04"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="خدمات إدارية"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="الإشهاد بمطابقة النسخ الاصل"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_shadow"
                android:backgroundTint="@color/colorProjet"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/shape_rec04"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="خدمات الحالة المدنية"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ترسيم ولادة"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_shadow"
                android:backgroundTint="@color/colorProjet"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/shape_rec04"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="خدمات الحالة المدنية"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="مضمون ولادة"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_shadow"
                android:backgroundTint="@color/colorProjet"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/shape_rec04"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="خدمات الحالة المدنية"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="إبرام عقد زواج"
                    android:textSize="20sp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/shape_shadow"
                android:backgroundTint="@color/colorProjet"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/shape_rec04"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="خدمات الحالة المدنية"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="استخراج الدفتر العائلي لأول مرة"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_shadow"
                android:backgroundTint="@color/colorProjet"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/shape_rec04"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="خدمات عمرانية"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="قرار مصادقة على تجزئة عقار"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_shadow"
                android:backgroundTint="@color/colorProjet"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/shape_rec04"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="خدمات عمرانية"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="قرار ترخيص بناء"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_shadow"
                android:backgroundTint="@color/colorProjet"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/shape_rec04"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="خدمات عمرانية"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp" />


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="قرار تمديد رخصة بناء"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_marginTop="10dp"/>


            </LinearLayout>



        </LinearLayout>


    </ScrollView>

</androidx.drawerlayout.widget.DrawerLayout>