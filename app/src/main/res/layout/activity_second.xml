<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MiseAjourActivity"
    android:id="@+id/drawable_layout"
    >
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:layout_gravity="end"
        app:headerLayout="@layout/header_menu"
        android:theme="@style/navigationTheme"
        app:menu="@menu/main_menu"
        app:itemIconSize="30sp"
        />


    <LinearLayout
        android:id="@+id/contentt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/layoutIcon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/menu_icon"
                android:layout_alignParentEnd="true"
                app:tint="@color/colorProjet"/>

            <LinearLayout
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_marginStart="60dp"
                android:layout_marginTop="5sp"
                android:backgroundTint="@color/colorProjet"
                android:background="@drawable/shape_shadow">

                <LinearLayout
                    android:layout_width="160dp"
                    android:layout_height="80dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="الدائرة البلدية بحي الحبيب"
                        android:textColor="@color/black"
                        android:layout_marginTop="20sp"
                        android:layout_marginStart="25sp"
                        />

                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="25dp"
                        android:text="مشترك 999+"
                        android:background="@drawable/shape_rec03"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20sp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:src="@drawable/splash"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5sp"
                    tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />


            </LinearLayout>


        </RelativeLayout>




        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#eee">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@color/white"
                        android:padding="5dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"
                            android:background="@drawable/shape_rec03"
                            android:gravity="center">

                            <EditText
                                android:id="@+id/searchEt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="10sp"
                                android:background="@android:color/transparent"
                                android:hint="بحث"
                                android:inputType="textPersonName"
                                android:padding="10dp"
                                android:textColor="@color/colorProjet"
                                android:textColorHint="@color/colorProjet"
                                android:textStyle="bold"
                                tools:ignore="TouchTargetSizeCheck" />

                            <ImageButton
                                android:id="@+id/searchBtn"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:layout_marginStart="5dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"
                                android:background="@android:color/transparent"
                                android:src="@drawable/ic_search_gray"
                                app:tint="@color/colorProjet"
                                tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

                        </RelativeLayout>


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/postsRV"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:padding="5dp"
                            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                            tools:listitem="@layout/row_post" />

                        <Button
                            android:id="@+id/loadMorebtn"
                            android:text="البحث عن المزيد"
                            android:layout_width="170dp"
                            android:layout_height="48dp"
                            android:backgroundTint="@color/colorProjet"
                            app:cornerRadius="20sp"
                            android:layout_gravity="center"
                            android:textColor="@color/white"/>



                    </LinearLayout>

                </ScrollView>


            </LinearLayout>



        </FrameLayout>


    </LinearLayout>





</androidx.drawerlayout.widget.DrawerLayout>