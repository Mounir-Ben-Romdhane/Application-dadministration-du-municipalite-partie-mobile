<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".registre"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        >
        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:text="ها هي خطوتك\n الأولى معنا!"
                android:textColor="@color/colorProjet"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginRight="20sp"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:contentDescription="@string/todo"
                android:src="@drawable/img"
                android:layout_marginLeft="20sp"/>

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/shape_rect02"
            android:layout_marginTop="10sp"
            >
            <EditText
                android:id="@+id/etNameRegister"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="الإسم"
                android:inputType="text"
                android:textStyle="bold"
                android:textSize="15sp"
                android:padding="20sp"
                android:drawableStart="@drawable/ic_person"
                />
            <EditText
                android:id="@+id/etEmailRegistre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="البريد الإلكتروني"
                android:inputType="textEmailAddress"
                android:textStyle="bold"
                android:textSize="15sp"
                android:padding="20sp"
                android:drawableStart="@drawable/ic_email"

                />
            <EditText
                android:id="@+id/etnumberregistre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="رقم الهاتف"
                android:inputType="number"
                android:textStyle="bold"
                android:textSize="15sp"
                android:padding="20sp"
                android:drawableStart="@drawable/ic_phone"
                />

            <EditText
                android:id="@+id/etCinregistre"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="رقم بطاقة التعريف"
                android:inputType="number"
                android:textStyle="bold"
                android:textSize="15sp"
                android:padding="20sp"
                android:drawableStart="@drawable/mail"
                />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="كلمه السر"
                android:inputType="textPassword"
                android:textStyle="bold"
                android:textSize="14sp"
                android:padding="20sp"
                android:drawableStart="@drawable/ic_key"
                android:textAlignment="textEnd"
                />

            <Button
                android:id="@+id/btnLoginRegister"
                android:layout_width="170dp"
                android:layout_height="50dp"
                android:text="تسجيل"
                android:textColor="@color/white"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/colorProjet"
                app:cornerRadius="20sp"

                />

            <TextView
                android:id="@+id/haveaccRegister"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="يوجد لديك حساب !"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="20sp"
                android:gravity="center"
                android:textColor="@color/colorProjet"
                />


        </LinearLayout>


    </LinearLayout>

</ScrollView>